<%= form_tag(@url, method: "get") do %>
  <p>
    <%= label_tag(:password, "New Password:") %>
    <%= password_field_tag(:password) %>
  </p>
  <p>
    <%= label_tag(:password_confirmation, "Confirmation:") %>
    <%= password_field_tag(:password_confirmation) %>
  </p>
  <p>
    <%= submit_tag("Update Password") %>
  </p>
<% end %>
